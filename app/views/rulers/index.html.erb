<p id="notice"><%= notice %></p>

<h1>Listing Rulers</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rulers.each do |ruler| %>
      <tr>
        <td><%= ruler.nombre %></td>
        <td><%= ruler.precio %></td>
        <td><%= ruler.descripcion %></td>
        <td><%= link_to 'Show', ruler %></td>
        <td><%= link_to 'Edit', edit_ruler_path(ruler) %></td>
        <td><%= link_to 'Destroy', ruler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

