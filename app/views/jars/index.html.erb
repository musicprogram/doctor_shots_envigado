<p id="notice"><%= notice %></p>

<h1>Listing Jars</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jars.each do |jar| %>
      <tr>
        <td><%= jar.nombre %></td>
        <td><%= jar.precio %></td>
        <td><%= jar.descripcion %></td>
        <td><%= link_to 'Show', jar %></td>
        <td><%= link_to 'Edit', edit_jar_path(jar) %></td>
        <td><%= link_to 'Destroy', jar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

